{% set pageUrl = page.url.split('/').slice(2).join('/') %}

{% if locales.length %}
  <p>{{ 'select_language' | i18n }}:</p>
  <ul>
    {% for locale in locales %}
      <li><span class="language-link" data-url="/{{ locale.code }}/{{ pageUrl }}" rel="alternate" hreflang="{{ locale.code }}">{{ locale.label }}</span></li>
    {% endfor %}
  </ul>
{% endif %}